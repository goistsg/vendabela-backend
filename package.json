{
  "name": "@vendabela",
  "version": "0.3.6",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "nest build",
    "build:commerce": "nest build commerce",
    "build:prod": "npx prisma generate && npx nest build && node dist/main.js",
    "build:prod:commerce": "npx prisma generate && npx nest build && node dist/main_commerce.js",
    "clean": "rm -rf dist/",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:commerce": "nest start commerce",
    "start:fast": "nest start --watch --preserveWatchOutput",
    "start:fast:commerce": "nest start commerce --watch --preserveWatchOutput",
    "start:dev": "nest start --watch --preserveWatchOutput --config tsconfig.dev.json",
    "start:dev:commerce": "nest start commerce --watch --preserveWatchOutput --config tsconfig.dev.json",
    "start:debug": "nest start --debug --watch",
    "start:debug:commerce": "nest start commerce --debug --watch --config tsconfig.dev.json",
    "start:prod": "node dist/main.js",
    "start:prod:commerce": "node dist/main_commerce.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "db:push": "prisma db push",
    "db:push:force": "prisma db push --force-reset",
    "db:seed": "tsx prisma/seed.ts",
    "db:reset": "prisma db push && tsx prisma/seed.ts",
    "db:generate": "prisma generate",
    "db:update": "prisma migrate dev --name update && prisma generate",
    "db:studio": "prisma studio",
    "db:migrate": "prisma migrate dev",
    "db:deploy": "prisma migrate deploy",
    "db:sync-cloud": "ENV_FILE=.env.cloud && prisma migrate deploy",
    "db:sync-cloud:force": "npx prisma db push --force-reset --schema=prisma/schema.prisma --env-file=.env.cloud",
    "generate:jwt-secret": "node scripts/generate-jwt-secret.js",
    "generate:jwt-secret:prod": "node scripts/generate-jwt-secret.js --prod"
  },
  "dependencies": {
    "@nestjs/axios": "^4.0.1",
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.1",
    "@prisma/client": "^6.17.1",
    "axios": "^1.13.1",
    "bcrypt": "^6.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "reflect-metadata": "^0.2.2",
    "resend": "^6.4.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@types/bcrypt": "^6.0.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.2",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.4.2",
    "prisma": "^6.17.1",
    "source-map-support": "^0.5.21",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.2",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "tsx": "^4.20.5",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts",
      "<rootDir>/test/**/*.spec.ts"
    ],
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/*.(t|j)s"
    ],
    "coverageDirectory": "coverage",
    "testEnvironment": "node"
  }
}
